<div class="table-responsive">
    {{#if attributes.contacts_entry}}
    <div class="col-lg-12">
        <h4>Contacts</h4><hr>
        <div class="col-lg-12 table table-striped table-hover divrow">
            {{#each attributes.contacts_entry}}
            <div class="col-lg-2">{{name}}</div>
            <div class="col-lg-10">{{value}}</div>
            {{/each}}
        </div>
    </div>
    {{/if}}
</div>